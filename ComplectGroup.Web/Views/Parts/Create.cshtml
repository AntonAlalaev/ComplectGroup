@{
    ViewData["Title"] = "Создать деталь";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1>Создать новую деталь</h1>
            
            <form asp-action="Create" asp-controller="Parts" method="post">
                <div class="form-group mb-3">
                    <label for="name" class="form-label">Название детали *</label>
                    <input type="text" class="form-control" id="name" name="name" 
                           placeholder="Например: Кабель медный" required>
                </div>

                <div class="form-group mb-3">
                    <label for="chapterId" class="form-label">Глава *</label>
                    <select class="form-control" id="chapterId" name="chapterId" required>
                        <option value="">-- Выберите главу --</option>
                        @foreach (var chapter in ViewBag.Chapters)
                        {
                            <option value="@chapter.Id">@chapter.Name</option>
                        }
                    </select>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Создать</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>
