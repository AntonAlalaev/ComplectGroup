@model List<PartDto>
@{
    ViewData["Title"] = "Детали";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>Детали</h1>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Добавить деталь
            </a>
            <a href="@Url.Action("Index", "Chapters")" class="btn btn-secondary">
                К разделам
            </a>
        </div>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">
            Нет добавленных деталей. <a href="@Url.Action("Create")">Создайте новую деталь</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Название</th>
                        <th>Глава</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var part in Model)
                    {
                        <tr>
                            <td>@part.Id</td>
                            <td>@part.Name</td>
                            <td>@part.Chapter.Name</td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = part.Id })" 
                                   class="btn btn-sm btn-warning">Редактировать</a>
                                <form method="post" action="@Url.Action("Delete", new { id = part.Id })" 
                                      style="display:inline;"
                                      onsubmit="return confirm('Удалить эту деталь? Она будет удалена из всех комплектаций!');">
                                    <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
