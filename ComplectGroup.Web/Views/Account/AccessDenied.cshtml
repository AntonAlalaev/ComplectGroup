@{
    ViewData["Title"] = "Доступ запрещен";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="alert alert-danger text-center" role="alert">
            <h1 class="alert-heading"><i class="fas fa-ban"></i> @ViewData["Title"]</h1>
            
            <hr>
            
            <p class="mb-4">
                <strong>У вас недостаточно прав</strong> для доступа к запрашиваемому ресурсу.
            </p>
            
            <p class="mb-4">
                Если вы считаете, что это ошибка, обратитесь к администратору системы.
            </p>
            
            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-home"></i> На главную
                </a>
                
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-controller="Account" asp-action="Logout" 
                       class="btn btn-outline-secondary ms-2">
                        <i class="fas fa-sign-out-alt"></i> Выйти и войти с другой учетной записью
                    </a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" 
                       class="btn btn-outline-secondary ms-2">
                        <i class="fas fa-sign-in-alt"></i> Войти под другой учетной записью
                    </a>
                }
            </div>
        </div>
        
        <div class="text-center mt-4">
            <p class="text-muted">
                <small>
                    Код ошибки: 403 | Время: @DateTime.Now.ToString("HH:mm:ss")
                </small>
            </p>
        </div>
    </div>
</div>

<style>
    .alert {
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    
    .alert-heading {
        font-size: 2rem;
        margin-bottom: 1rem;
    }
    
    .fas {
        margin-right: 10px;
    }
</style>

<!-- Если нет Font Awesome, можно убрать иконки или подключить в _Layout -->