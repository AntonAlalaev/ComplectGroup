@model ComplectGroup.Application.DTOs.ComplectationDto

@{
    ViewData["Title"] = "Комплектация " + Model.Number;
}

<div class="container mt-4">
    <h1>Комплектация @Model.Number</h1>

    <dl class="row">
        <dt class="col-sm-3">Заказчик</dt>
        <dd class="col-sm-9">@Model.Customer</dd>

        <dt class="col-sm-3">Адрес</dt>
        <dd class="col-sm-9">@Model.Address</dd>

        <dt class="col-sm-3">Менеджер</dt>
        <dd class="col-sm-9">@Model.Manager</dd>

        <dt class="col-sm-3">Дата отгрузки</dt>
        <dd class="col-sm-9">@Model.ShippingDate.ToString("dd.MM.yyyy")</dd>
    </dl>

    <h3 class="mt-4">Позиции</h3>

    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Раздел</th>
                <th>Деталь</th>
                <th>Количество</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var pos in Model.Positions
                                 .OrderBy(p => p.Part.Chapter.Name)
                                 .ThenBy(p => p.Part.Name))
        {
            <tr>
                <td>@pos.Part.Chapter.Name</td>
                <td>@pos.Part.Name</td>
                <td>@pos.Quantity</td>
                <td>
                    <form asp-action="DeletePosition"
                          asp-route-id="@Model.Id"
                          asp-route-positionId="@pos.Id"
                          method="post"
                          class="d-inline"
                          onsubmit="return confirm('Удалить позицию @pos.Part.Name из этой комплектации?');">
                        <button type="submit" class="btn btn-sm btn-outline-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редактировать</a>
        <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
    </div>
</div>
