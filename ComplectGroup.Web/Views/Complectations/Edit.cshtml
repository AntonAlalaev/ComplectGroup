@model ComplectGroup.Application.DTOs.UpdateComplectationRequest

@{
    ViewData["Title"] = "Редактирование комплектации " + Model.Number;
}

<div class="container mt-4">
    <h1>Редактирование комплектации</h1>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()

        <div class="row mb-3">
            <div class="col-md-4">
                <label asp-for="Number" class="form-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Customer" class="form-label"></label>
                <input asp-for="Customer" class="form-control" />
            </div>
            <div class="col-md-4">
                <label asp-for="Manager" class="form-label"></label>
                <input asp-for="Manager" class="form-control" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="col-md-3">
                <label asp-for="ShippingDate" class="form-label"></label>
                <input asp-for="ShippingDate" class="form-control" type="date" />
            </div>
            <div class="col-md-3">
                <label asp-for="ShippingTerms" class="form-label"></label>
                <input asp-for="ShippingTerms" class="form-control" />
            </div>
        </div>

        <h3 class="mt-4">Позиции</h3>

        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Раздел</th>
                    <th>Деталь</th>
                    <th>Количество</th>
                    <th>Удалить</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Positions != null)
            {
                for (int i = 0; i < Model.Positions.Count; i++)
                {
                    <tr>
                        <td>@Model.Positions[i].PartChapterName</td>
                        <td>@Model.Positions[i].PartName</td>
                        <td>
                            <input asp-for="Positions[@i].Quantity" class="form-control form-control-sm" />
                            <input type="hidden" asp-for="Positions[@i].Id" />
                            <input type="hidden" asp-for="Positions[@i].PartId" />
                        </td>
                        <td class="text-center">
                            <input type="checkbox"
                                name="Positions[@i].IsDeleted"
                                value="true"
                                @(Model.Positions[i].IsDeleted == true ? "checked" : "") />
                            <input type="hidden" name="Positions[@i].IsDeleted" value="false" />
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>

        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a asp-action="Details" asp-route-id="@ViewContext.RouteData.Values["id"]" class="btn btn-secondary">Отмена</a>
    </form>
</div>
