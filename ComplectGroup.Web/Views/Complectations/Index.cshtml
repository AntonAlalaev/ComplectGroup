        </div>
    </div>

    @* —Ç—É—Ç –æ–±—ã—á–Ω–æ —Å–æ–æ–±—â–µ–Ω–∏—è *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>‚Ññ –ö–æ–º–ø–ª.</th>
                <th>–ó–∞–∫–∞–∑—á–∏–∫</th>
                <th>–ú–µ–Ω–µ–¥–∂–µ—Ä</th>
                <th>–ê–¥—Ä–µ—Å</th>
                <th>–î–∞—Ç–∞ –æ—Ç–≥—Ä—É–∑–∫–∏</th>
                <th>–ü–æ–∑–∏—Ü–∏–π</th>
                <th>–í–µ—Å, –∫–≥</th>
                <th>–û–±—ä–µ–º, –º¬≥</th>
                <th>–î–µ–π—Å—Ç–≤–∏—è</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var complectation in Model)
        {
            <tr>
                <td>@complectation.Number</td>
                <td>@complectation.Customer</td>
                <td>@complectation.Manager</td>
                <td>@complectation.Address</td>
                <td>@complectation.ShippingDate.ToString("dd.MM.yyyy")</td>
                <td>@complectation.Positions.Count</td>
                <td>@complectation.TotalWeight.ToString("F0")</td>
                <td>@complectation.TotalVolume.ToString("F2")</td>
                <td>
                    <!-- –ß–µ–∫–±–æ–∫—Å "–ò–≥–Ω–æ—Ä–∏—Ä–æ–≤–∞—Ç—å" -->
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" 
                            id="ignore-@complectation.Id" 
                            @(complectation.IsIgnored ? "checked" : "")
                            onchange="toggleIgnore(@complectation.Id, this.checked)" />
                        <label class="form-check-label small" for="ignore-@complectation.Id">
                            –ò–≥–Ω–æ—Ä–∏—Ä–æ–≤–∞—Ç—å
                        </label>
                    </div>
                    
                    <a asp-action="Details" asp-route-id="@complectation.Id" class="btn btn-sm btn-outline-secondary">–ü—Ä–æ—Å–º–æ—Ç—Ä</a>
                    <a asp-action="Edit" asp-route-id="@complectation.Id" class="btn btn-sm btn-outline-primary ms-1">–†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å</a>

                    <form asp-action="Delete" asp-route-id="@complectation.Id" method="post" class="d-inline"
                        onsubmit="return confirm('–£–¥–∞–ª–∏—Ç—å –∫–æ–º–ø–ª–µ–∫—Ç–∞—Ü–∏—é @complectation.Number?');">
                        <button type="submit" class="btn btn-sm btn-outline-danger ms-1">–£–¥–∞–ª–∏—Ç—å</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        function toggleIgnore(id, isIgnored) {
            const checkbox = document.getElementById(`ignore-${id}`);
            checkbox.disabled = true;

            // ‚úÖ –ë–µ—Ä—ë–º —Ç–æ–∫–µ–Ω –∏–∑ —Å–∫—Ä—ã—Ç–æ–≥–æ input, –∫–æ—Ç–æ—Ä—ã–π —Å–æ–∑–¥–∞–ª @Html.AntiForgeryToken()
            const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
            const token = tokenInput ? tokenInput.value : '';

            if (!token) {
                console.error('AntiForgeryToken not found on page');
                alert('–û—à–∏–±–∫–∞: –Ω–µ –Ω–∞–π–¥–µ–Ω —Ç–æ–∫–µ–Ω –±–µ–∑–æ–ø–∞—Å–Ω–æ—Å—Ç–∏');
                checkbox.disabled = false;
                checkbox.checked = !isIgnored;
                return;
            }

            // –§–æ—Ä–º–∏—Ä—É–µ–º –¥–∞–Ω–Ω—ã–µ –∫–∞–∫ form-urlencoded
            const formData = new URLSearchParams();
            formData.append('__RequestVerificationToken', token);

            fetch(`/Complectations/ToggleIgnore?id=${id}&isIgnored=${isIgnored}`, {
                method: 'POST',
                headers: {
                    // ‚úÖ –ó–∞–≥–æ–ª–æ–≤–æ–∫ –¥–ª—è –≤–∞–ª–∏–¥–∞—Ü–∏–∏ (–¥—É–±–ª–∏—Ä—É–µ–º —Ç–æ–∫–µ–Ω)
                    'RequestVerificationToken': token
                },
                body: formData  // Content-Type —É—Å—Ç–∞–Ω–æ–≤–∏—Ç—Å—è –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏
            })
            .then(async response => {
                if (response.ok) {
                    location.reload();
                } else {
                    const text = await response.text();
                    console.error('Server error:', text);
                    alert('–û—à–∏–±–∫–∞: ' + (text || response.status));
                    checkbox.checked = !isIgnored;
                }
            })
            .catch(err => {
                console.error('Fetch error:', err);
                alert('–ù–µ —É–¥–∞–ª–æ—Å—å —Å–æ–µ–¥–∏–Ω–∏—Ç—å—Å—è —Å —Å–µ—Ä–≤–µ—Ä–æ–º');
                checkbox.checked = !isIgnored;
            })
            .finally(() => {
                checkbox.disabled = false;
            });
        }
    </script>
}