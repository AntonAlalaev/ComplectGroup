@model List<ComplectGroup.Application.DTOs.ComplectationDto>

@{
    ViewData["Title"] = "Комплектации";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Комплектации</h1>

        <div>
            <a asp-action="Import" class="btn btn-success me-2">Импорт из Excel</a>
            <a asp-action="Create" class="btn btn-primary">Создать вручную</a>
            <a asp-action="Browse" class="btn btn-outline-secondary">Просмотр по комплектациям</a>
        </div>
    </div>

    @* тут обычно сообщения *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>№ Компл.</th>
                <th>Заказчик</th>
                <th>Менеджер</th>
                <th>Адрес</th>
                <th>Дата отгрузки</th>
                <th>Позиций</th>
                <th>Вес, кг</th>
                <th>Объем, м³</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var complectation in Model)
        {
            <tr>
                <td>@complectation.Number</td>
                <td>@complectation.Customer</td>
                <td>@complectation.Manager</td>
                <td>@complectation.Address</td>
                <td>@complectation.ShippingDate.ToString("dd.MM.yyyy")</td>
                <td>@complectation.Positions.Count</td>
                <td>@complectation.TotalWeight.ToString("F0")</td>
                <td>@complectation.TotalVolume.ToString("F2")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@complectation.Id" class="btn btn-sm btn-outline-secondary">Просмотр</a>
                        <a asp-action="Edit" asp-route-id="@complectation.Id" class="btn btn-sm btn-outline-primary ms-1">Редактировать</a>

                        <form asp-action="Delete" asp-route-id="@complectation.Id" method="post" class="d-inline"
                            onsubmit="return confirm('Удалить комплектацию @complectation.Number?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger ms-1">Удалить</button>
                        </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
