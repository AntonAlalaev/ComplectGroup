@model List<ComplectationDto>
@{
    ViewData["Title"] = "Комплектации";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>Комплектации</h1>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Новая комплектация
            </a>
        </div>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">
            Нет комплектаций. <a href="@Url.Action("Create")">Создайте новую</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>№ Комплектации</th>
                        <th>Заказчик</th>
                        <th>Менеджер</th>
                        <th>Адрес</th>
                        <th>Дата отгрузки</th>
                        <th>Позиций</th>
                        <th>Вес, кг</th>
                        <th>Объем, м³</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var complectation in Model)
                    {
                        <tr>
                            <td>@complectation.Number</td>
                            <td>@complectation.Customer</td>
                            <td>@complectation.Manager</td>
                            <td>@complectation.Address</td>
                            <td>@complectation.ShippingDate.ToString("dd.MM.yyyy")</td>
                            <td><span class="badge bg-info">@complectation.Positions.Count</span></td>
                            <td>@complectation.TotalWeight</td>
                            <td>@complectation.TotalVolume</td>
                            <td>
                                <a href="@Url.Action("Details", new { id = complectation.Id })" 
                                   class="btn btn-sm btn-info">Просмотр</a>
                                <a href="@Url.Action("Edit", new { id = complectation.Id })" 
                                   class="btn btn-sm btn-warning">Редактировать</a>
                                <form method="post" action="@Url.Action("Delete", new { id = complectation.Id })" 
                                      style="display:inline;"
                                      onsubmit="return confirm('Удалить комплектацию?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
