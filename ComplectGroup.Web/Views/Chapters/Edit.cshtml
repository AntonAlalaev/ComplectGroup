@model ComplectGroup.Application.DTOs.ChapterDto

@{
    ViewData["Title"] = "Редактировать главу";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1>Редактировать главу</h1>
            
            <form asp-action="Edit" asp-controller="Chapters" method="post">
                <input type="hidden" asp-for="Id" />
                
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Название главы *</label>
                    <input asp-for="Name" class="form-control" placeholder="Например: Электрика" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Сохранить</button>
                    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>
